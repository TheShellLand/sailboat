vmadm list
echo ""
read -p "UUID: " UUID
echo ""
vmadm get "$UUID" | json nics
echo ""
read -p "mac: " MAC


vmadm update $UUID <<EOF
{
  "remove_nics": ["$MAC"]
}
EOF